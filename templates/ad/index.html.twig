{% extends 'base.html.twig' %}

{% block title %}Nos Magnifiques Inventions {% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">Voici les propositions d'inventions !</h1>
    <div class="row">
        {% for ad in ads %}
            {% set url = path('ads_show', {'slug':ad.slug}) %}
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        {{ ad.idees}} trouvailles, <strong>{{ad.price}}&euro;/ projets</strong>  <br/>
                        <small>pas encore not√©</small>  
                    </div>
                    <a href="{{ url }}">
                        <img src="{{ad.coverImage}}" alt="Image des trouvailles" 
                    style="height: 200px; width: 100%; display : block "/>
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">
                           <a href="{{ url }}">
                                {{ad.title}}
                           </a> 
                        </h4>
                        <p class="card-text">
                            {{ad.introduction}}
                        </p>
                        <a href="{{ url }}" class="btn btn-primary">En savoir plus</a>

                    </div>
                        
                    </body>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
    
{% endblock %}
