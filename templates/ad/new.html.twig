{% extends 'base.html.twig' %}

{% block title %} Création d'une invention {% endblock %}
{% form_theme form 'ad/_collection.html.twig' %}
{% block body %}
    <div class="container">
        <h1 class="my-5">Créer une nouvelle invention</h1>

        {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="alert alert-light">
                        <h2>Informations générales</h2>
                        <hr>
                        {{form_row(form.title)}}
                        {{form_row(form.slug)}}
                        {{form_row(form.price)}}
                        {{form_row(form.idees)}}
                    </div>
                    <div class="alert alert-light">
                        <h2>Détail de l'invention</h2>
                        <hr>
                        {{form_row(form.introduction)}}
                        {{form_row(form.content)}}
                    </div>
                </div>
                <div class="col">
                    <div class="alert alert-light">
                        <h2>Image de l'invention</h2>
                        <hr>
                        {{form_row(form.coverImage)}}
                        {{form_row(form.images)}}
                    </div>
                </div>
            </div>
            
            <div class="alert alert-success clearfix mr-5">
                <h2 class="alert alert-heading">Sauvegarder mon projet !</h2>
                <p>Vous êtes sur le point de créer votre invention, Bravo !!!</p>
                <button type="submit" class="btn btn-primary float-right">
                Créer la nouvelle invention ! <i class="fas fa-check"></i></button>
            </div>
       

        {{ form_end(form) }}
    </div>
{% endblock %}



{% block javascripts %}
    <script src="/js/ad.js"></script>
{% endblock %}


