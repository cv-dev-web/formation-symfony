{% extends 'base.html.twig' %}

{% block title %} Modification du Profil utilisateur  {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">modification du profil</h1>

        {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-heading">Informations générales</h2>
                        <hr>
                        {{form_row(form.firstName)}}
                        {{form_row(form.lastName)}}
                        {{form_row(form.email)}}
                        {{form_row(form.picture)}}
                    </div> 
                </div>
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-heading">Détails</h2>
                        <hr>
                        {{form_row(form.introduction)}}
                        {{form_row(form.description | raw ) }}

                        <hr>
                        <div class="alert alert-success">
                            <p>Si vous avez terminé vos modifications, vous pouvez maintenant sauvegarder</p>
                            <button type="submit" class="btn btn-primary">
                            Enregistrer les modifications
                            <i class="fas fa-check ml-2"></i>
                            </button>
                        </div>
                        
                    </div>
                </div>
            </div>
            
        {{ form_end(form) }}
    </div>
{% endblock %}