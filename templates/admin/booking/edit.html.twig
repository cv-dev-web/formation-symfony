{% extends 'admin/base.html.twig' %}

{% block title %}Modifier la reservation {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modifier la réversation n° {{booking.id}}</h1>
        {{form_start(form)}}
        <div class="row">
            <div class="col">
                {{form_row(form.startDate)}}
                {{form_row(form.endDate)}}
                {{form_row(form.comment)}}
            </div>
            <div class="col">
                {{form_row(form.booker)}}
                {{form_row(form.ad)}}
                <button type="submit" class="btn btn-success mt-5 ml-2">
                    Modifier
                    <i class="fas fa-check ml-2"></i>
                </button>
            </div>
        </div>
        
        {{form_end(form)}}
    </div>

{% endblock %}